@model Pie

<h2>@Model.PieName</h2>

<div class="thumbnail">
    <img alt="@Model.PiePhoto" style="width:100%;height:450px;" src="~/images/@Model.PiePhoto">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.PieName</a>
        </h3>
        <h4>@Model.ShortDescreption</h4>
        <p>@Model.LongDescreption</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId">Add to cart</a>
            </p>
        </div>
    </div>
</div>